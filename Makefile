#_______________________________________________________________________________
#
#               Makefile for Emacs package installation
#_______________________________________________________________________________
#

EMACS = emacs -q --no-site-file

EL=$(shell for f in lisp/$(PWD); do ls $$f/*.el; done)
ELC=$(EL:.el=.elc)

.SUFFIXES:	.el .elc

#_______________________________________________________________________________
#                                                                         RULES

#_______________________________________________________________________________
#                                                                       CLEANUP

clean:
	rm -f $(ELC)

distclean:
	rm -f $(EL) $(ELC) *~ */*~ .\#* */.\#*
